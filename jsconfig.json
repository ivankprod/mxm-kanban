{
	"compilerOptions": {
		"baseUrl": "./",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"target": "ES2020",
		"jsx": "react",
		"allowImportingTsExtensions": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"paths": {
			"core/*": ["./src/*"]
		}
	},
	"exclude": ["node_modules", "**/node_modules/*"]
}
